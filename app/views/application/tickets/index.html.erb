<table>
  <thead>
  <tr>
    <th colspan="3">Билеты</th>
  </tr>
  </thead>
  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= link_to "#{ticket.first_station.name} - #{ticket.end_station.name}", ticket_path(ticket) %></td>
      <td><%= ticket.user_name %></td>
      <td><%= link_to "[X]", "/tickets/#{ticket.id}", method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
