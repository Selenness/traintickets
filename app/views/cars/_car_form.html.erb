<%= form_for(@car) do |f| %>
    <%= render 'common/errors', resource: @car %>
    <div class="field">
      <%= f.label :train %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field">
      <%= f.label :car_type %>
      <%= f.select :car_type, options = %w(Купейный Плацкартный) %>
    </div>
    <div class="field">
      <%= f.label :top_seats %>
      <%= f.text_field :top_seats %>
    </div>
    <div class="field">
      <%= f.label :bottom_seats %>
      <%= f.text_field :bottom_seats %>
    </div>

    <div class="actions">
      <%= f.submit 'Создать' %>
    </div>
<% end %>
<%= link_to 'Назад', cars_path %>