<%= form_for(@car) do |f| %>
    <% if @car.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@car.errors.count, "error") %> prohibited this train from being saved:</h2>

          <ul>
            <% @car.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :train %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field">
      <%= f.label :car_type %>
      <%= f.select :car_type, options = %w(Купейный Плацкартный) %>
    </div>
    <div class="field">
      <%= f.label :top_seats %>
      <%= f.text_field :top_seats %>
    </div>
    <div class="field">
      <%= f.label :bottom_seats %>
      <%= f.text_field :bottom_seats %>
    </div>

    <div class="actions">
      <%= f.submit 'Создать' %>
    </div>
<% end %>
