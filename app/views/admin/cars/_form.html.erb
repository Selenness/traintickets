<%= form_for [:admin, @train, @car.becomes(Car)] do |f| %>
    <%= render 'common/errors', resource: @car %>

    <div class="form-group">
      <%= f.label :type, 'Тип вагона' %>
      <%= f.select :type, options_for_select([['Купейный', CoupeCar], ['Плацкартный', EconomyCar], ['Сидячий', SeatedCar], ['СВ', SVCar ]]) %>
    </div>

    <div class="form-group" id="top_seats_group">
      <%= f.label :top_seats, 'Верхние сидения' %>
      <%= f.text_field :top_seats, class: 'form-control' %>
    </div>
    <div class="form-group" id="bottom_seats_group">
      <%= f.label :bottom_seats, 'Нижние сидения' %>
      <%= f.text_field :bottom_seats, class: 'form-control' %>
    </div>
    <div class="form-group" style="display: none" id="side_top_seats_group">
      <%= f.label :side_top_seats, 'Верхние боковые сидения' %>
      <%= f.text_field :side_top_seats, class: 'form-control' %>
    </div>
    <div class="form-group" style="display: none" id="side_bottom_seats_group">
      <%= f.label :side_bottom_seats, 'Нижние боковые сидения' %>
      <%= f.text_field :side_bottom_seats, class: 'form-control' %>
    </div>
    <div class="form-group" style="display: none" id="seated_seats_group">
      <%= f.label :seated_seats, 'Сидячие сидения'%>
      <%= f.text_field :seated_seats, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit 'Создать' %>
    </div>
<% end %>

<%= link_to 'Назад', admin_train_cars_path %>