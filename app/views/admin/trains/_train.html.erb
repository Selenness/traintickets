<tr>
  <td>
    <div id="train_number_<%= train.id %>">
    <%= train.number %>
    </div>
    <%= render 'form', train: train, hidden: true %>
  </td>
  <td><%= link_to t('common.refferences.show'), admin_train_path(train) %></td>
  <td><%= link_to t('common.refferences.edit'), '', class: 'edit_train', data: { train_id: train.id } %></td>
  <td><%= link_to t('common.refferences.delete'), admin_train_path(train), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>