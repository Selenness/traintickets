<h1>Изменить маршрут</h1>
<%= form_for [:admin, @route] do |f| %>
    <%= render 'common/errors', resource: @route %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :railway_station_ids, "Станции" %>
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :name, {}, { multiple: true } %>
    </div>

    <div class="actions">
      <%= f.submit 'Создать' %>
    </div>
<% end %>


<%= link_to 'Показать', admin_route_path(@route) %> |
<%= link_to 'Назад', admin_routes_path %>