<p id="notice"><%= notice %></p>

<h1>Маршруты</h1>

<table>
  <thead>
  <tr>
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
      <tr>
        <td>
          <div id="route_name_<%= route.id %>">
          <%= route.name %>
          </div>
          <%= render 'edit', route: route, hidden: true %>
        </td>
        <td><%= link_to 'Показать', admin_route_path(route) %></td>
        <td><%= link_to 'Редактировать', '', class: 'edit_route', data: { route_id: route.id } %></td>
        <td><%= link_to 'Удалить', admin_route_path(route), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый маршрут', new_admin_route_path %>