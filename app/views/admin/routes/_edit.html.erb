
<%= form_for [:admin, route], html: {style: "display: #{hidden ? 'none' : 'block'}"} do |f| %>
    <%= render 'common/errors', resource: route %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :railway_station_ids, "Станции" %>
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :name, {}, { multiple: true } %>
    </div>

    <div class="actions">
      <%= f.submit 'Создать' %>
    </div>
<% end %>
